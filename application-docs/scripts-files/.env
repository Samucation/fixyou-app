# Logging
SQL_LOG_LEVEL=DEBUG
SQL_BIND_LOG_LEVEL=TRACE
SECURITY_LOG_LEVEL=DEBUG
WEB_LOG_LEVEL=DEBUG

# Flyway
FLYWAY_DEFAULT_SCHEMA=fixyou
