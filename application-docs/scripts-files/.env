APP_PORT=8082

# ===========================
#    FIXYOU APPLICATION ENV
# ===========================

APPLICATION_ENVIRONMENT=local
APPLICATION_NAME=fixyou

# Banco de dados
JDBC_DATABASE_URL=jdbc:postgresql://postgres:5432/m33_db
JDBC_DATABASE_USERNAME=postgres
JDBC_DATABASE_PASSWORD=F7@uM!dQ#2kLpZxT$9eV

# JPA & Hibernate
HIBERNATE_DDL_AUTO=update
JPA_SHOW_SQL=true
HIBERNATE_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# Servidor
SERVER_PORT=8080
SPRINT_SECURITY_BASIC=false

# Keycloak
KEYCLOAK_URL=http://<local-ip>:8080/
